@page "/"

<MudContainer Style="max-width: 100%">
    <MudGrid Class="mt-4" Justify="Justify.Center">
        <MudItem xs="4" Class="align-self-stretch d-flex align-content-center">
            <MudButton 
                Variant="Variant.Outlined" 
                Color="Color.Primary" 
                Style="height: 100%" 
                Class="d-flex align-content-center justify-center flex-wrap flex-grow-1"
                Href="/world"
            >
                <MudImage Src="images/World.png" Style="max-width: 95%"/>
            </MudButton>
        </MudItem>
        <MudItem xs="4">
            <MudButton 
                Variant="Variant.Outlined" 
                Color="Color.Primary" 
                Style="height: 100%" 
                Class="d-flex align-content-center justify-center flex-wrap flex-grow-1"
                Href="/rise"
            >
                <MudImage Src="images/Rise.png" Style="max-width: 95%"/>
            </MudButton>
        </MudItem>
        <MudItem xs="12" Class="d-flex justify-center">
            <MudText Typo="Typo.body1">
                If you like my work and would like to help support me create it, consider buying me a tea or making a donation :)
            </MudText>
        </MudItem>
        <MudItem xs="12" Class="gap-4 d-flex justify-center">
            <MudButton
                Variant="Variant.Filled"
                Color="Color.Primary"
                Href="https://www.paypal.com/donate/?hosted_button_id=9HJVRHF4PSTD4"
            >
                Buy me a tea
            </MudButton>
        </MudItem>
        <MudItem xs="12" Class="gap-4 d-flex justify-center">
            <MudButton
                Variant="Variant.Filled"
                Color="Color.Primary"
                Href="https://www.paypal.com/donate/?hosted_button_id=9HJVRHF4PSTD4"
            >
                Donate
            </MudButton>
        </MudItem>
    </MudGrid>
</MudContainer>